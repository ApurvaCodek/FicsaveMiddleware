<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_download_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.rahulja.ficsavemiddleware.DownloadHistoryActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/download_history_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:subtitle="@string/download_history"
            app:subtitleTextColor="@color/cardview_light_background"
            app:title="@string/app_name"
            app:titleTextColor="@color/colorTextLight" />

        <ListView
            android:id="@+id/history_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/download_history_toolbar" />
</RelativeLayout>
